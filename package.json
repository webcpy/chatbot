{
  "name": "chatbot-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=8.14"
  },
  "dependencies": {
    "chatbot": "workspace:*"
  },
  "scripts": {
    "build": "turbo run build",
    "build:backend": "pnpm --filter=!chatbot-editor-ui build",
    "build:frontend": "pnpm --filter=chatbot-editor-ui build",
    "typecheck": "turbo run typecheck",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean --parallel",
    "start": "run-script-os",
    "start:default": "cd packages/cli/bin && ./chatbot",
    "start:windows": "cd packages/cli/bin && chatbot",
    "watch": "turbo run watch --parallel"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@ngneat/falso": "^6.4.0",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-v8": "^1.2.1",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.2",
    "cypress-otp": "^1.0.3",
    "cypress-real-events": "^1.11.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-expect-message": "^1.1.3",
    "jest-mock": "^29.6.2",
    "jest-mock-extended": "^3.0.4",
    "nock": "^13.3.2",
    "nodemon": "^3.0.1",
    "p-limit": "^3.1.0",
    "rimraf": "^5.0.1",
    "run-script-os": "^1.0.7",
    "start-server-and-test": "^2.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "tsc-watch": "^6.0.4",
    "turbo": "1.10.12",
    "typescript": "*",
    "vite": "^5.0.12",
    "vitest": "^1.2.1",
    "vue-tsc": "^1.8.27"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sqlite3"
    ],
    "overrides": {
      "@types/node": "^18.16.16",
      "axios": "1.6.7",
      "chokidar": "3.5.2",
      "jsonwebtoken": "9.0.0",
      "prettier": "^3.1.0",
      "semver": "^7.5.4",
      "tough-cookie": "^4.1.3",
      "tslib": "^2.6.1",
      "tsconfig-paths": "^4.2.0",
      "ts-node": "^10.9.1",
      "typescript": "^5.3.0"
    },
    "patchedDependencies": {
      "@midwayjs/mqtt@3.15.0": "patches/@midwayjs__mqtt@3.15.0.patch"
    }
  }
