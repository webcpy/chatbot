{
  "name": "@chat-bot/wechat",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/index.js",
  "bin": {
    "bot": "./bin/bot"
  },
  "scripts": {
    "clean": "rimraf dist .turbo",
    "dev": "pnpm run watch",
    "watch": "concurrently \"tsc -w -p tsconfig.build.json\" \"tsc-alias -w -p tsconfig.build.json\"",
    "start": "node dist/index.js",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "typecheck": "tsc",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json"
  },
  "files": [
    "dist",
    "/theme.json"
  ],
  "oclif": {
    "bin": "bot",
    "dirname": "bot",
    "theme": "./theme.json",
    "commands": "./dist/commands/",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "config": {
        "description": "初始化配置"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@chat-bot/assistant": "workspace:*",
    "@oclif/core": "^3.26.6",
    "@oclif/plugin-autocomplete": "^3.0.18",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-not-found": "^3.1.9",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "semver": "^7.5.4",
    "wechaty": "^1.20.2"
  }
}
